{
  "name": "@deboxsoft/casbin",
  "version": "5.23.2",
  "description": "An authorization library that supports access control models like ACL, RBAC, ABAC in Node.JS",
  "typings": "libs/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./libs/index.js"
  },
  "scripts": {
    "prepack": "run-s lint test build",
    "postpack": "run-s clean",
    "prebuild": "pnpm clean",
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint ./src --ext .js,.ts",
    "fmt": "eslint ./src --ext .js,.ts --fix",
    "release": "bump -c && pnpm publish --access public",
    "clean": "rimraf lib",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@deboxsoft/module-core": "^2.6.60",
    "@types/node": "^18.13.0",
    "@types/picomatch": "^2.2.2",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "@vitest/coverage-c8": "^0.28.4",
    "c8": "~7.12.0",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "tsup": "~6.6.0",
    "typescript": "^4.9.5",
    "vitest": "~0.28.4"
  },
  "dependencies": {
    "await-lock": "^2.0.1",
    "csv-parse": "^4.15.3",
    "expression-eval": "^5.0.0",
    "picomatch": "^2.2.3"
  },
  "files": [
    "lib",
    "examples"
  ],
  "homepage": "http://casbin.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/casbin/node-casbin.git"
  },
  "license": "Apache-2.0",
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "pnpm fmt && pretty-quick --staged"
    }
  }
}
